<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="fill_parent"
android:layout_height="fill_parent">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="fill_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:gravity="top">


        <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_weight="0.5">
            <TableRow android:id="@+id/tableRow1" android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/firmNameLabel"
                    android:textSize="30sp"
                    android:textColor="#6fff25"></TextView>
            </TableRow>
            <TableRow android:id="@+id/tableRow2" android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">
                <TextView android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/driverTarif" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tariffNameLabel"
                    android:textSize="30sp"
                    android:textColor="#ff2331"
                    android:gravity="center|fill_vertical"></TextView>
            </TableRow>
            <TableRow android:id="@+id/tableRow3" android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_height="wrap_content" android:id="@+id/podacha"
                    android:text="@string/deliveryCar" android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textSize="20sp"></TextView>

                <TextView android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="0" android:layout_height="wrap_content"
                    android:id="@+id/podachalPriceLabel" android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:textSize="20sp"
                    android:gravity="right"></TextView>
            </TableRow>
            <TableRow android:id="@+id/tableRow4" android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_height="wrap_content" android:id="@+id/minimalLabel"
                    android:text="@string/minimalLabelText" android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textSize="20sp"></TextView>
                <TextView android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="0" android:layout_height="wrap_content"
                    android:id="@+id/minimalPriceLabel" android:layout_weight="0.5"
                    android:layout_width="0dp"
                    android:textSize="20sp"
                    android:gravity="right"></TextView>
            </TableRow>
            <TableRow android:id="@+id/tableRow5" android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_height="wrap_content" android:id="@+id/kmLabel"
                    android:text="@string/kmLabelText" android:layout_weight="1"
                    android:layout_width="140dp"
                    android:textSize="20sp"></TextView>

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/priceKM"
                    android:text="0"
                    android:gravity="bottom|right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="x"
                    android:id="@+id/multiplyKM" />

                <TextView android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="0" android:layout_height="wrap_content"
                    android:id="@+id/kmAmmount"
                    android:layout_width="0dp"
                    android:textSize="20sp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="="
                    android:id="@+id/textView8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0"
                    android:id="@+id/totalPriceKMCity"
                    android:gravity="right" />
            </TableRow>
            <TableRow android:id="@+id/tableRow6" android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_height="wrap_content" android:id="@+id/minuteLabel"
                    android:text="@string/priceByDistOutOfCity" android:layout_weight="1"
                    android:layout_width="fill_parent"
                    android:textSize="20sp"></TextView>
                <TextView android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_height="wrap_content"
                    android:id="@+id/outCityPriceLabel"
                    android:layout_width="30dp"
                    android:textSize="20sp"
                    android:phoneNumber="false"
                    android:text="0"
                    android:gravity="right"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="x"
                    android:id="@+id/multiplyKMoutCity"
                    android:singleLine="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/kmAmmountOutCity"
                    android:text="0" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="="
                    android:id="@+id/textView9" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0"
                    android:id="@+id/totalPriceOutCity" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:text="@string/minuteLabelText"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textSize="20sp" />

                <TextView
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="0"
                    android:layout_height="wrap_content"
                    android:id="@+id/priceProstoy"
                    android:layout_width="0dp"
                    android:textSize="20sp"
                    android:gravity="right" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="x"
                    android:id="@+id/textView7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0"
                    android:id="@+id/prostoyAmmount" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="="
                    android:id="@+id/textView10" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="0"
                    android:id="@+id/totalPriceProstoy" />
            </TableRow>

            <TableRow android:id="@+id/tableRow7" android:layout_height="wrap_content"
                android:paddingLeft="5dp" android:layout_width="wrap_content"
                android:paddingRight="5dp">
                <View android:layout_span="1" android:background="#333333"
                    android:layout_marginTop="1dip" android:layout_marginBottom="1dip"
                    android:layout_width="fill_parent" android:layout_height="2dp"
                    android:layout_weight="1" android:paddingRight="5dp"
                    android:textSize="20sp"/>
            </TableRow>
            <TableRow android:id="@+id/tableRow8" android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_height="wrap_content" android:id="@+id/totalKmLabelStatic"
                    android:text="@string/totalKmLabelStaticText" android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textSize="20sp"></TextView>
                <TextView android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="0" android:layout_height="wrap_content"
                    android:id="@+id/totalKmLabel" android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textSize="20sp"></TextView>
            </TableRow>
            <TableRow android:id="@+id/tableRow9" android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView android:textAppearance="?android:attr/textAppearanceMedium"
                    android:layout_height="wrap_content" android:id="@+id/totalMinutesLabelStatic"
                    android:text="@string/totalMinutesLabelStaticText"
                    android:layout_weight="1" android:layout_width="0dp"
                    android:textSize="20sp"></TextView>
                <TextView android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="0" android:layout_height="wrap_content"
                    android:id="@+id/totalMinutesLabel" android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textSize="20sp"></TextView>
            </TableRow>
            <TableRow android:id="@+id/tableRow10" android:layout_height="wrap_content"
                android:paddingLeft="5dp" android:layout_width="wrap_content"
                android:paddingRight="5dp">
                <View android:layout_span="1" android:background="#333333"
                    android:layout_marginTop="1dip" android:layout_marginBottom="1dip"
                    android:layout_width="fill_parent" android:layout_height="2dp"
                    android:layout_weight="1" android:paddingRight="5dp" />
            </TableRow>

        </TableLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal" android:layout_width="72dp"
            android:layout_height="fill_parent" android:layout_gravity="center"
            android:visibility="visible">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical|right">

                    <TextView android:textAppearance="?android:attr/textAppearanceSmall"
                        android:id="@+id/currency"
                        android:layout_height="wrap_content" android:layout_width="wrap_content"
                        android:layout_gravity="center"
                        android:singleLine="true"
                        android:textSize="30sp"
                        android:text="@string/currency"></TextView>
                </TableRow>
            </TableLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal">

            <TextView android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="0" android:layout_width="wrap_content" android:id="@+id/totalCostLabel" android:textSize="80sp"
                android:layout_height="wrap_content" android:layout_weight="0.5" android:layout_gravity="center|right"
                android:gravity="center"></TextView>

            <TextView
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView12"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:singleLine="true"
                android:textSize="30sp"
                android:text="@string/currency"
                android:gravity="left" />
        </TableRow>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="true"
        android:id="@+id/ifTaxometreStarted"
        android:gravity="bottom|center">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/stopTaximetre"
            android:id="@+id/stopTaximButton"
            android:gravity="center|center_horizontal" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:id="@+id/ifTaximetreStoped"
        android:gravity="bottom">
        <Button android:layout_height="wrap_content" android:id="@+id/taxometerStartButton"
            android:text="@string/startTaximetre" android:layout_width="160dp"
            android:layout_gravity="bottom" android:textSize="20sp"
            android:gravity="center"></Button>
        <Button android:layout_height="wrap_content" android:id="@+id/goOrdersButton"
            android:text="@string/drvStateFree" android:layout_width="fill_parent"
            android:layout_gravity="center|bottom" android:textSize="20sp"
            android:gravity="bottom|center"></Button>

    </LinearLayout>

</LinearLayout>

</ScrollView>
